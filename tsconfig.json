{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es7", "dom"],
    "strict": true,
    "strictFunctionTypes": false
  },
  "include": [
    "src/**/*"
  ],
}